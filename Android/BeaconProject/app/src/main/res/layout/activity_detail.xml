<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/detail_app_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorBackground"
            android:padding="20dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="122dp">

            <ImageView
                android:id="@+id/image_cover"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                app:srcCompat="@drawable/book"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="By [author]"
                    android:fontFamily="@font/futura_pt_book"
                    android:layout_marginBottom="10dp"
                    tools:layout_editor_absoluteX="169dp"
                    tools:layout_editor_absoluteY="16dp"
                    android:textSize="18dp"/>

                <!--
                <TextView
                    android:id="@+id/text_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[type]  | Original issue [year]"
                    android:fontFamily="@font/futura_pt_book"
                    android:layout_marginBottom="10dp"
                    tools:layout_editor_absoluteX="169dp"
                    tools:layout_editor_absoluteY="49dp" />
                -->

                <TextView
                    android:id="@+id/text_type2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Availability"
                    android:fontFamily="@font/futura_pt_book"
                    tools:layout_editor_absoluteX="169dp"
                    tools:layout_editor_absoluteY="83dp" />

                <TextView
                    android:id="@+id/text_available"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/futura_pt_book"
                    android:text="[number in stock] available"
                    tools:layout_editor_absoluteX="169dp"
                    tools:layout_editor_absoluteY="102dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:text="Queue"
                        android:fontFamily="@font/futura_pt_book"
                        tools:layout_editor_absoluteX="169dp"
                        tools:layout_editor_absoluteY="155dp"
                        android:layout_marginRight="16dp"
                        android:background="@color/colorBlue"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="#ffffff"
                        android:textSize="11dp"/>

                    <Button
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:text="Request"
                        android:fontFamily="@font/futura_pt_book"
                        tools:layout_editor_absoluteX="169dp"
                        tools:layout_editor_absoluteY="155dp"
                        android:layout_marginRight="16dp"
                        android:background="@color/colorBlue"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="#ffffff"
                        android:textSize="11dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_book"
            android:padding="15dp"
            android:text="Description"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_pt_book"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Lorem ipsum änna typ sådär liksom du vet gött å så änna. Ipsum lorem alfa beta gamma delta svea saga patricia jupiter till månen sådär bara najs." />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="20dp"
            android:fontFamily="@font/futura_pt_book"
            android:text="Details" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_pt_book"
                    android:text="Origin" />

                <TextView
                    android:id="@+id/text_origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/futura_pt_book"
                    android:text="[origin]" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_pt_book"
                    android:text="ISBN number" />

                <TextView
                    android:id="@+id/text_isbn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/futura_pt_book"
                    android:text="[isbn_number]" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_pt_book"
                    android:text="Shelf" />

                <TextView
                    android:id="@+id/text_shelf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/futura_pt_book"
                    android:text="[shelf]" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_pt_book"
                    android:text="Publication" />

                <TextView
                    android:id="@+id/text_publication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futura_pt_book"
                    android:text="[publication]" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="20dp"
            android:fontFamily="@font/futura_pt_book"
            android:text="Others also read" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/textFeatured">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/othersRead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>